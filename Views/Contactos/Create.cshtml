@model ListinTelefonico.Models.Contactos

@{
    ViewData["Title"] = "Create";
}

<div class="jumbotron" style="background-color:cadetblue">
        <h1 style="letter-spacing:3px; font-family:Verdana">Añadir</h1>
        <h4 style="font-family:Rockwell; letter-spacing:2px">Contactos</h4>


<hr />
<div class="row, jumbotron">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono" class="control-label"></label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
                <br />
                
                <div class="text-center, jumbotron" style="background-color:gray"> <p  style="letter-spacing:3px; color:whitesmoke; font-weight:bold; font-family:Verdana; font-size: 1em" >@ViewData["result"]</p> </div>
             
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-primary" />
            </div>
        </form>
             
    </div>
</div>

<div>
    <a class="btn-success" asp-action="Index">   Volver A La Lista  </a>
</div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
